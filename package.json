{
  "name": "@lifi/intent",
  "private": false,
  "version": "0.0.1",
  "description": "Typescript library for OIF and LI.FI Intent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lifinance/intent.ts.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "bun run clean",
    "build": "tsc --project tsconfig.build.json && node ./scripts/rewrite-dist-imports.mjs",
    "lint:staged": "prettier -w",
    "prepublishOnly": "bun run build && bun run check && bun run test",
    "test": "bun test",
    "check": "tsc --noEmit -p tsconfig.json",
    "coverage": "bun run test --coverage",
    "coverage:lcov": "bun run coverage --coverage-reporter='lcov' --coverage-dir='./'"
  },
  "lint-staged": {
    "*.ts": [
      "bun run lint:staged"
    ]
  },
  "dependencies": {
    "ky": "^1.12.0",
    "viem": "~2.45.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "bun": "^1.3.5",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "3.4.2",
    "typescript": "^5.6.3"
  }
}
