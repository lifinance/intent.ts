{
  // Build config for the published ESM package. Excludes test files.
  "extends": "./tsconfig.base.json",
  "include": ["src"],
  "exclude": [
    "src/**/*.bench.ts",
    "src/**/*.bench-d.ts",
    "src/**/*.test.ts",
    "src/**/*.test-d.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec-d.ts",
  ],
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true
  }
}
